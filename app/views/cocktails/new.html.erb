

<div class='container'>
  <div class="row">
    <h3> Please, specify the cocktail name :</h3>
    <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name, placeholder:"for exemple : mojito" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit , class: "btn btn-primary"%>
    <% end %>

  </div>
</div>
