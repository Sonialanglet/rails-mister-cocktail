
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://doctorsofficeami.com/wp-content/uploads/2017/01/anna-maria-island-cocktail-bar-1.jpg');">
  <div class="banner-content">
    <h1>Miss Cocktails</h1>
    <p>Post your favorite cocktail </p>
    <a class="btn btn-danger btn-lg">Start now</a>
  </div>
</div>


<div class='container'>

  <div class="row">

    <h1>Cocktails </h1>
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
        <%= link_to "", cocktail_path(cocktail), class: 'card-link'%>
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
        </div>

      </div>
    </div>

    <% end %>
  </div>

</div>


  <div class="links">
    <%= link_to "create a new cocktail ", new_cocktail_path %>
  </div>





