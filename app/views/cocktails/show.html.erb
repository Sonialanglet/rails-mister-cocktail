



<div class='container'>
  <div class="row">
    <h1><%= @cocktail.name %></h1>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <% @cocktail.doses.each do |dose| %>
       <p> description : <%= dose.description %></p>
       <p> ingredient : <%= dose.ingredient.name %> </p>

      <hp><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>
      Delete'.html_safe, dose_path(dose),
      method: :delete,
      data: { confirm: 'are you sure?'},class: "btn btn-primary"%> </p>
 <% end %>
 </div>

 <div class="row">
   <%= simple_form_for [@cocktail, @dose] do |f| %>
     <%= f.input :description %>
     <%= f.association :ingredient, collection: Ingredient.all.order('name ASC') %>
     <%= f.submit "add a dose", class: "btn btn-primary" %>
   <% end %>

 </div>

</div>

<div class="links">
<%= link_to "Get back to the list", cocktails_path %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)%>
</div>
